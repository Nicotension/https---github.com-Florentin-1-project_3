{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <h1>Dashboard</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="card bg-primary text-white mb-4">
                    <div class="card-body">Number of Users</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <span class="small text-white stretched-link">{{ userCount }}</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h2>Location of the Business in Vienna</h2>
                <img src="https://maps.googleapis.com/maps/api/staticmap?center=Vienna,Austria&zoom=12&size=600x300&maptype=roadmap&markers=color:red%7Clabel:C%7C48.2082,16.3738" alt="Business Location in Vienna">
            </div>
        </div>
    </div>
{% endblock %}

