{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px / 1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="hero-wrapper">
        <div class="hero">
            <div class="hero-content">
                {% if not is_granted("IS_AUTHENTICATED_FULLY") %}
                    <h1>LANDING PAGE</h1>
                    <p>Bla bla bla</p>
                    <div class="button-container">
                        <button onclick="window.location.href='{{ path ('app_static')}}'">Products</button>
                        <button onclick="window.location.href='/register'">Register</button>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="products">
        <h2>Our Products</h2>
        <div class="product-list">
            {% for product in products %}
                <div class="product-item">
                    <h3>{{ product.name }}</h3>
                    <p>{{ product.description|raw }}</p>
                    <p>Price: {{ product.price }}</p>
                    <p>Category: {{ product.category }}</p>
                    <img src="{{ asset('uploads/images/' ~ product.picture) }}" alt="{{ product.name }}" width="350">
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="reviews">
        <h2>What Our Users Say</h2>
        <div class="card-container">
            <div class="card">
                <div class="card-content">
                    <p>"This is an amazing product! Highly recommend it."</p>
                    <h3>Jane Doe</h3>
                    <span>⭐⭐⭐⭐⭐</span>
                </div>
            </div>
            <div class="card">
                <div class="card-content">
                    <p>"Fantastic service and great value for money."</p>
                    <h3>John Smith</h3>
                    <span>⭐⭐⭐⭐⭐</span>
                </div>
            </div>
            <div class="card">
                <div class="card-content">
                    <p>"A game changer in the industry. Will use again."</p>
                    <h3>Emily Johnson</h3>
                    <span>⭐⭐⭐⭐</span>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
