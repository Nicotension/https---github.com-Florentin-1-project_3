{% extends 'base.html.twig' %}

{% block title %}Contact Details{% endblock %}

{% block body %}
<head>
    <title>Google Maps in Symfony</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <h1 class="display-4 text-warning fw-bold mb-4">Our Location</h1>
                <div id="map" class="mb-4" style="height: 400px; border-radius: 10px; border: 2px solid #f0ad4e;"></div>
            </div>
            <div class="col-md-6 d-flex align-items-center">
                <div>
                    <h2 class="text-primary">Contact Information</h2>
                    <ul class="list-unstyled mt-3">
                        <li class="mb-2">
                            <strong>Address:</strong> Lange Gasse 72, 1080 Vienna
                        </li>
                        <li class="mb-2">
                            <strong>Phone:</strong> +43 670 2346111
                        </li>
                        <li class="mb-2">
                            <strong>Email:</strong> contact@toy_wonderland@gmail.com
                        </li>
                    </ul>
                    <a href="mailto:contact@toy_wonderland@gmail.com" class="btn btn-primary mt-3">Send us an Email</a>
                </div>
            </div>
        </div>
    </div>

    <script>
        function initMap() {
            var location = { lat: 48.213998, lng: 16.3513443 };
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 15,
                center: location,
                streetViewControl: false,
                zoomControl: false,
                scrollwheel: false,
                disableDoubleClickZoom: true,
                fullscreenControl: false,
                mapTypeControl: false
            });
            var marker = new google.maps.Marker({
                position: location,
                map: map
            });
        }
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key={{ google_maps_api_key }}&callback=initMap"></script>
</body>

{% endblock %}