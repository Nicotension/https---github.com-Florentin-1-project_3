{% extends 'base.html.twig' %}

{% block title %}Orders
{% endblock %}

{% block body %}
<style>
h1 {
    font-size: 2.5rem;
    font-weight: bold;
    color: rgb(232, 184, 36);
    margin-top: 20px;
}
</style>
	<h1>Orders</h1>

	<table class="table">

		<tbody>


			<tr>
				<th></th>
				<td><img src="{{ asset('uploads/' ~ product.picture) }}" alt="{{ product.name }}" width="350"></td>
			</tr>

			<tr>
				<th>Id</th>
				<td>{{ order.id }}</td>
			</tr>

			<tr>
				<th>Product Name</th>
				<td>{{product.name}}</td>
			</tr>

			<tr>
				<th>Description</th>
				<td>{{product.description}}</td>
			</tr>

			<tr>
				<th>Price</th>
				<td>{{product.price}}</td>
			</tr>


		</tbody>
	</table>

	<a href="{{ path('app_orders_index') }}"> &#9664;&#9664; back to list</a>

	{{ include('orders/_delete_form.html.twig') }}


{% endblock %}
