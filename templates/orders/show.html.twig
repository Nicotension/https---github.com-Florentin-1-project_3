{% block title %}Orders
{% endblock %}

{% block body %}
	<h1>Orders</h1>

	<table class="table">
		<tbody>


			<tr>
				<th></th>
				<td><img src="{{product.picture}}"></td>
			</tr>

			<tr>
				<th>Id</th>
				<td>{{ order.id }}</td>
			</tr>

			<tr>
