{% extends 'base.html.twig' %}

{% block title %}Payment Form{% endblock %}

{% block body %}
<style>
h1 {
    font-size: 2.5rem;
    font-weight: bold;
    color: rgb(232, 184, 36);
    margin-top: 20px;
}
</style>
<div class="text-center mt-3"><h1>Payment Form</h1></div>



<div class="container mt-5">
<form class="form-control" action="{{ path('payment_submit') }}" method="post">

    <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Card Type:</label>
    <select class="form-control" name="card_type" id="card-type" required >
            <option value="visa">Visa</option>
            <option value="mastercard">MasterCard</option>
            <option value="amex">American Express</option>
            <option value="discover">Discover</option>
        </select>

    </div>

  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Cardholder's Name:</label>
    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Cardholder's Name " >
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Card Number:</label>
    <input  class="form-control" id="exampleInputPassword1" placeholder="xxxx-xxxx-xxxx-xxxx " required>
  </div>

<div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">CVV:</label>
    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="xxx" required>
  </div>

  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Expiry Date:</label>
    <input type="" class="form-control" id="exampleInputPassword1" placeholder="mm/yyyy " required>
  </div>

  <button type="submit" class="btn btn-primary mt-3">Confirm Payment</button>
  
</form>

</div>

{% endblock %}
