
{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    
<div class=" pageTitle m-2 text-center">

    <h1>Product Catalog</h1>

	</div>

	<a class="m-5" href="{{ path('app_product_index') }}"><<< back to list</a>


    
	
	
	<div class="container text-center">
