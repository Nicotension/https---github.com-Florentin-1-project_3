                <a class="btn btn-primary" href="{{ path('app_review_show', {'id': review.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>

    
{% endblock %}
