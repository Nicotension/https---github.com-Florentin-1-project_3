{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
<style>

.pageTitle {
    font-size: 2.5rem;
    font-weight: bold;
    color: rgb(232, 184, 36);
    margin-top: 20px;
}


a.m-5 {
    font-size: 1rem;
    color: rgb(232, 184, 36);
    text-decoration: none;
    transition: color 0.3s ease;
}

a.m-5:hover {
    color: rgba(232, 184, 36, 0.8);
}


.form-container {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 16px;
    padding: 30px;
    max-width: 500px;
    margin: 0 auto; 
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.18);
}


.form-container form {
    display: flex;
    flex-direction: column;
}

.form-container label {
    font-weight: bold;
    margin-bottom: 8px;
    color: #333;
}

.form-container input,
.form-container textarea,
.form-container select {
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ccc;
    border-radius: 8px;
    font-size: 1rem;
    background-color: rgba(255, 255, 255, 0.6);
    color: #333;
}

.form-container input:focus,
.form-container textarea:focus,
.form-container select:focus {
    border-color: rgb(232, 184, 36);
    outline: none;
    box-shadow: 0 0 5px rgba(232, 184, 36, 0.5);
}

.form-container button {
    background-color: rgb(232, 184, 36);
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 8px;
    font-size: 1.2rem;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.form-container button:hover {
    background-color: rgba(232, 184, 36, 0.8);
    transform: scale(1.05);
}


.form-container .delete-form {
    margin-top: 20px;
    text-align: center;
}

</style>

<div class="pageTitle m-2 text-center">
    <h1>Edit Profile</h1>
</div>

<div>
    <a class="m-5" href="{{ path('app_homepage') }}">&#9664;&#9664; Back to Home</a>
</div>

<div class="container mt-5 form-container">
    <form method="post" action="{{ path('app_user_edit', {'id': user.id}) }}" onsubmit="alert('Update successful')">
        {{ include('user/_form.html.twig', {'button_label': 'Update'}) }}
    </form>

    <div class="delete-form">
        {{ include('user/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
