			<tr>

				<th>Fname</th>
				<th>Lname</th>
				<th>Email</th>
				<th>Phone Number</th>


			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>

					<td>{{ user.fname }}</td>
					<td>{{ user.lname }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.phone }}</td>


					<a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
					<a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
				</tr>
			</td>
