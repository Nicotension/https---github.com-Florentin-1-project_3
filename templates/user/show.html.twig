{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
<div class=" pageTitle m-2 text-center">
	<h1>User</h1>
</div>

<div>
<a class="m-5" href="{{ path('app_homepage') }}"><<< Back to Home</a>
</div>


	<div class="container mt-5">
	<table class="table">
		<tbody>

			<td><img width="150" src="{{ asset('uploads/' ~ user.picture ) }}"/></td>

			<tr>
				<th>First Name</th>
				<td>{{ user.fname }}</td>
			</tr>
			<tr>
				<th>Last Name</th>
				<td>{{ user.lname }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Phone Number</th>
				<td>{{ user.phone }}</td>
			</tr>

			<tr>
			{# <th>Birthday</th>
			<td>{{ user.date_of_birth }}</td>
			</tr> #}

		</tbody>
	</table>

	

	<a class="btn btn-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">Edit Account</a>

	{{ include('user/_delete_form.html.twig') }}
	</div>

	
{% endblock %}
